---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-gray-900 text-white">
    <nav class="bg-gray-800 p-4">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">MiNetflix</a>
        <div class="space-x-4">
          <a href="/" class="hover:text-gray-300">Inicio</a>
          <a href="/createMovie" class="hover:text-gray-300">Crear Pelicula</a>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-gray-800 p-4 mt-8">
      <div class="container mx-auto text-center">
        <p>&copy; 2024 MiNetflix Clone. Todos los derechos reservados.</p>
      </div>
    </footer>
  </body>
</html>