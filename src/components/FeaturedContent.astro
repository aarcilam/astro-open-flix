---
const { featured } = Astro.props;
---

<div class="featured-content mb-12">
  <div class="relative h-96 overflow-hidden rounded-lg">
    <img src={featured.thumbnail} class="w-full h-full object-cover"  />
    <div class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-black to-transparent">
      <h2 class="text-4xl font-bold mb-2">{featured.title}</h2>
      <p class="text-lg mb-4">{featured.description}</p>
      <a href={`/${featured.id}`} class="inline-block px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
        Ver ahora
      </a>
    </div>
  </div>
</div>